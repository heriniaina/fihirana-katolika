<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".FavoriteActivity" >

	<org.katolika.fihirana.lib.HeaderLayout android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:text="@string/home_favorite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/page_title"/>
 
    <!-- Artist Name -->
    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/page_description" />
    <TextView
	    	android:id="@+id/error_message"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ff0000"
		    android:padding="8dip"
		    android:visibility="gone" 
		    />

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#529fd4"
        android:dividerHeight="1dp"
        android:background="#ffffff"
        android:listSelector="@drawable/home_selector"
        android:padding="5dp" />
        

</LinearLayout>

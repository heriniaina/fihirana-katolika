<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/rowBackgroundPressed" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
                android:radius="@dimen/rowRadius" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/rowBackground" />
            <stroke
                android:width="1dp"
                android:color="@color/rowBorder" />
            <corners
                android:radius="@dimen/rowRadius" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_selector"
    android:orientation="vertical"
    android:layout_margin="5dp"
    >


    <TextView
        android:id="@+id/f_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/f_title"
        style="@style/row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_fihirana_title"
        android:textStyle="bold" />

    <!-- Artist Name -->

    <TextView
        android:id="@+id/f_description"
        style="@style/row_special"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f_title"
        android:layout_marginTop="1dip"
        android:layout_marginRight="30dip"
        android:text="@string/home_fihirana_desc"
        android:layout_marginEnd="30dip" />

    <!-- Rightend Duration -->
    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/cnt"
        style="@style/row_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/f_title" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_below="@id/f_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/fill" />


    <!-- tsipika -->


</RelativeLayout>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->


    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="btnBlue">
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
	<style name="ButtonText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">20dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>
    <style name="home_list">
        <item name="android:background">@drawable/home_list_bg</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="home_description">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
	<style name="page_title">
	    <item name="android:textColor">#040404</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textStyle">bold</item>
        
	</style>
	<style name="page_description">
	    <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginLeft">20dip</item>
	</style>
    <style name="home_list_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name="row_title">
        <item name="android:textColor">@color/rowTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="row_page">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginLeft">20dip</item>
    </style>
    <style name="row_description">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">1dip</item>
        <item name="android:layout_marginLeft">20dip</item>
    </style>
    <style name="row_special">
        <item name="android:textColor">@color/rowHighlight</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="hira_content">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="row_count">
        <item name="android:textColor">@color/rowTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Hira: 100</item>
    </style>
    <style name="edittext" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
    </style>
    <style name="row">
        <item name="android:background">@drawable/row_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="search_theme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

</resources>
